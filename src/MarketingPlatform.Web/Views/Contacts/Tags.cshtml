@{
    ViewData["Title"] = "Tag Management";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tags-fill"></i> Tag Management</h2>
        <button class="btn btn-primary" onclick="showCreateTagModal()">
            <i class="bi bi-plus-circle"></i> Create Tag
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-tags fs-1"></i>
                    <h3 id="totalTags" class="mt-2">0</h3>
                    <small>Total Tags</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-1"></i>
                    <h3 id="totalTagged" class="mt-2">0</h3>
                    <small>Tagged Contacts</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">All Tags</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tagsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Tag</th>
                            <th>Color</th>
                            <th>Contacts</th>
                            <th>Created</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Tag Modal -->
<div class="modal fade" id="tagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tagModalTitle">Create Tag</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="tagForm">
                    <input type="hidden" id="tagId" value="">
                    <div class="mb-3">
                        <label for="tagName" class="form-label">Tag Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="tagName" required maxlength="100"
                               placeholder="e.g., VIP, Newsletter, Premium">
                    </div>
                    <div class="mb-3">
                        <label for="tagColor" class="form-label">Color</label>
                        <div class="d-flex align-items-center gap-3">
                            <input type="color" class="form-control form-control-color" id="tagColor" value="#667eea">
                            <div class="color-presets d-flex gap-2">
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#667eea;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#667eea'"></button>
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#198754;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#198754'"></button>
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#dc3545;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#dc3545'"></button>
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#ffc107;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#ffc107'"></button>
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#0dcaf0;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#0dcaf0'"></button>
                                <button type="button" class="btn btn-sm rounded-circle color-preset" style="background:#6f42c1;width:30px;height:30px;" onclick="document.getElementById('tagColor').value='#6f42c1'"></button>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Preview</label>
                        <div>
                            <span class="badge fs-6" id="tagPreview" style="background-color: #667eea;">Sample Tag</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveTagBtn" onclick="saveTag()">
                    <i class="bi bi-check-lg"></i> Save Tag
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contacts-tags.js" asp-append-version="true"></script>
}
