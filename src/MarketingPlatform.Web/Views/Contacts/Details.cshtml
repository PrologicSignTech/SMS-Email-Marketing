@{
    ViewData["Title"] = "Contact Details";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge"></i> Contact Details</h2>
        <div>
            <button class="btn btn-primary" id="editBtn" onclick="editContact()">
                <i class="bi bi-pencil"></i> Edit
            </button>
            <a href="@Url.Action("Index", "Contacts")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem; color: #667eea;"></i>
                    <h4 class="mt-3" id="contactName">Loading...</h4>
                    <p class="text-muted" id="contactEmail">-</p>
                    <span class="badge" id="statusBadge">-</span>
                </div>
            </div>

            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-tags me-2"></i>Groups</h6>
                </div>
                <div class="card-body" id="groupsList">
                    <span class="text-muted">Loading...</span>
                </div>
            </div>

            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-tag me-2"></i>Tags</h6>
                </div>
                <div class="card-body" id="tagsList">
                    <span class="text-muted">Loading...</span>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-info-circle me-2"></i>Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">First Name:</div>
                        <div class="col-md-8 fw-semibold" id="firstName">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Last Name:</div>
                        <div class="col-md-8 fw-semibold" id="lastName">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Email:</div>
                        <div class="col-md-8" id="emailDetail">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Phone:</div>
                        <div class="col-md-8" id="phone">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">City:</div>
                        <div class="col-md-8" id="city">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Country:</div>
                        <div class="col-md-8" id="country">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Postal Code:</div>
                        <div class="col-md-8" id="postalCode">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Status:</div>
                        <div class="col-md-8" id="statusDetail">-</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Created:</div>
                        <div class="col-md-8" id="createdAt">-</div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-list-task me-2"></i>Custom Attributes</h5>
                </div>
                <div class="card-body" id="customAttributes">
                    <span class="text-muted">No custom attributes</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contacts-details.js" asp-append-version="true"></script>
}
