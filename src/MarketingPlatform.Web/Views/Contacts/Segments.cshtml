@{
    ViewData["Title"] = "Dynamic Segments";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-diagram-3-fill"></i> Dynamic Segments</h2>
        <button class="btn btn-primary" onclick="showCreateSegmentModal()">
            <i class="bi bi-plus-circle"></i> Create Segment
        </button>
    </div>

    <!-- Segment Builder Card -->
    <div class="card mb-4" id="segmentBuilderCard">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Segment Builder</h5>
            <span class="badge bg-primary" id="audienceSize">0 contacts</span>
        </div>
        <div class="card-body">
            <!-- Logical Operator -->
            <div class="mb-3">
                <label class="form-label fw-bold">Match Contacts Where</label>
                <div class="d-flex gap-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="logicalOperator" id="operatorAnd" value="And" checked>
                        <label class="form-check-label" for="operatorAnd">
                            <strong>ALL</strong> rules match (AND)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="logicalOperator" id="operatorOr" value="Or">
                        <label class="form-check-label" for="operatorOr">
                            <strong>ANY</strong> rule matches (OR)
                        </label>
                    </div>
                </div>
            </div>

            <!-- Rules Container -->
            <div id="rulesContainer">
                <!-- Rules will be added here dynamically -->
            </div>

            <button type="button" class="btn btn-outline-primary mt-3" onclick="addRule()">
                <i class="bi bi-plus"></i> Add Rule
            </button>

            <hr>

            <div class="d-flex gap-2">
                <button type="button" class="btn btn-info" onclick="calculateSize()">
                    <i class="bi bi-calculator"></i> Calculate Size
                </button>
                <button type="button" class="btn btn-success" onclick="evaluateSegment()">
                    <i class="bi bi-play-fill"></i> Preview Contacts
                </button>
                <button type="button" class="btn btn-primary" onclick="saveAsGroup()">
                    <i class="bi bi-save"></i> Save as Dynamic Group
                </button>
            </div>
        </div>
    </div>

    <!-- Preview Results -->
    <div class="card d-none" id="previewCard">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-eye"></i> Segment Preview</h5>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="$('#previewCard').addClass('d-none')">
                <i class="bi bi-x"></i> Close
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Country</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tbody id="previewTableBody">
                    </tbody>
                </table>
            </div>
            <div id="previewCount" class="mt-2 text-muted small"></div>
        </div>
    </div>

    <!-- Existing Dynamic Groups -->
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-collection"></i> Saved Dynamic Groups</h5>
            <button class="btn btn-sm btn-outline-primary" onclick="loadGroups()">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
        <div class="card-body">
            <div id="groupsList">
                <div class="text-center py-3">
                    <div class="spinner-border spinner-border-sm"></div> Loading groups...
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Save Group Modal -->
<div class="modal fade" id="saveGroupModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Save as Dynamic Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="groupName" class="form-label">Group Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="groupName" required placeholder="e.g., US Customers">
                </div>
                <div class="mb-3">
                    <label for="groupDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="groupDescription" rows="2" placeholder="Describe this segment..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="confirmSaveGroup()">
                    <i class="bi bi-save"></i> Save Group
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contacts-segments.js" asp-append-version="true"></script>
}
