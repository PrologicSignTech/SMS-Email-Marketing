@{
    ViewData["Title"] = "Auto-Suppression Rules";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-gear-wide-connected"></i> Auto-Suppression Rules</h2>
            <p class="text-muted mb-0">Configure automatic suppression rules for contacts</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary me-2" onclick="seedDefaults()">
                <i class="bi bi-magic"></i> Load Defaults
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRuleModal">
                <i class="bi bi-plus-circle"></i> Create Rule
            </button>
        </div>
    </div>

    <!-- Info Alert -->
    <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <strong>How it works:</strong> Auto-suppression rules automatically add contacts to suppression lists when specific events occur (unsubscribe, bounce, spam complaint, opt-out, etc.). System rules cannot be deleted but can be disabled.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <!-- Rules Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table id="rulesTable" class="table table-hover w-100">
                <thead>
                    <tr>
                        <th>Rule Name</th>
                        <th>Trigger</th>
                        <th>Scope</th>
                        <th>Channel</th>
                        <th>Action</th>
                        <th>Status</th>
                        <th>Triggered</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Rule Modal -->
<div class="modal fade" id="createRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Create Suppression Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createRuleForm">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Rule Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="ruleName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Trigger Event <span class="text-danger">*</span></label>
                            <select class="form-select" id="ruleTrigger" required>
                                <option value="">Select Trigger</option>
                                <option value="0">Unsubscribe Link Click</option>
                                <option value="1">Email Hard Bounce</option>
                                <option value="2">Email Soft Bounce</option>
                                <option value="3">Spam Complaint</option>
                                <option value="4">SMS Opt-Out (STOP)</option>
                                <option value="5">WhatsApp Opt-Out</option>
                                <option value="6">Invalid Email Detected</option>
                                <option value="7">Invalid Phone Detected</option>
                                <option value="8">Manual CSV Upload</option>
                                <option value="9">Inactivity Timeout</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" id="ruleDescription" placeholder="Describe what this rule does">
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Scope</label>
                            <select class="form-select" id="ruleScope">
                                <option value="0">Global (All Channels)</option>
                                <option value="1">Channel Specific</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Channel</label>
                            <select class="form-select" id="ruleChannel">
                                <option value="0">All</option>
                                <option value="1">Email</option>
                                <option value="2">SMS</option>
                                <option value="3">MMS</option>
                                <option value="4">WhatsApp</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Suppression Type</label>
                            <select class="form-select" id="ruleSuppressionType">
                                <option value="0">Opt-Out</option>
                                <option value="1">Bounce</option>
                                <option value="2">Complaint</option>
                                <option value="3">Manual</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Priority</label>
                            <input type="number" class="form-control" id="rulePriority" value="0" min="0">
                            <div class="form-text">Lower number = higher priority</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Auto Reason Message</label>
                            <input type="text" class="form-control" id="ruleAutoReason" placeholder="e.g. User clicked unsubscribe">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createRule()">
                    <i class="bi bi-check-circle"></i> Create Rule
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Rule Modal -->
<div class="modal fade" id="editRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editRuleId">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Rule Name</label>
                        <input type="text" class="form-control" id="editRuleName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" id="editRuleDescription">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Scope</label>
                        <select class="form-select" id="editRuleScope">
                            <option value="0">Global</option>
                            <option value="1">Channel Specific</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Channel</label>
                        <select class="form-select" id="editRuleChannel">
                            <option value="0">All</option>
                            <option value="1">Email</option>
                            <option value="2">SMS</option>
                            <option value="3">MMS</option>
                            <option value="4">WhatsApp</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Suppression Type</label>
                        <select class="form-select" id="editRuleSuppressionType">
                            <option value="0">Opt-Out</option>
                            <option value="1">Bounce</option>
                            <option value="2">Complaint</option>
                            <option value="3">Manual</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Priority</label>
                        <input type="number" class="form-control" id="editRulePriority" min="0">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Auto Reason</label>
                        <input type="text" class="form-control" id="editRuleAutoReason">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <div class="form-check form-switch mt-2">
                            <input class="form-check-input" type="checkbox" id="editRuleActive">
                            <label class="form-check-label" for="editRuleActive">Active</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveEditRule()">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/suppression-rules.js" asp-append-version="true"></script>
}
