@{
    ViewData["Title"] = "Message Reports";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-file-earmark-bar-graph text-primary me-2"></i>Message Reports</h2>
            <p class="text-muted mb-0">Track all SMS, MMS, and Email message delivery status</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-primary border-4">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0" id="totalSent">0</h3>
                            <small class="text-muted">Total Sent</small>
                        </div>
                        <div class="text-primary fs-2"><i class="bi bi-send-check"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-success border-4">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0" id="totalDelivered">0</h3>
                            <small class="text-muted">Delivered</small>
                        </div>
                        <div class="text-success fs-2"><i class="bi bi-check-circle"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-warning border-4">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0" id="totalPending">0</h3>
                            <small class="text-muted">Pending / Scheduled</small>
                        </div>
                        <div class="text-warning fs-2"><i class="bi bi-clock-history"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-danger border-4">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="mb-0" id="totalFailed">0</h3>
                            <small class="text-muted">Failed</small>
                        </div>
                        <div class="text-danger fs-2"><i class="bi bi-x-circle"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Tabs -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <ul class="nav nav-tabs card-header-tabs" id="statusTabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#all" data-bs-toggle="tab" data-status="">All Messages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#sent" data-bs-toggle="tab" data-status="2">
                        <i class="bi bi-check2 text-success"></i> Sent
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#delivered" data-bs-toggle="tab" data-status="3">
                        <i class="bi bi-check2-all text-success"></i> Delivered
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#pending" data-bs-toggle="tab" data-status="0">
                        <i class="bi bi-clock text-warning"></i> Queued
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#scheduled" data-bs-toggle="tab" data-status="1">
                        <i class="bi bi-calendar-event text-info"></i> Sending
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#failed" data-bs-toggle="tab" data-status="4">
                        <i class="bi bi-x-circle text-danger"></i> Failed
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label small text-muted">Filter by Channel</label>
                    <select class="form-select form-select-sm" id="channelFilter">
                        <option value="">All Channels</option>
                        <option value="0">SMS</option>
                        <option value="1">MMS</option>
                        <option value="2">Email</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table id="reportsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Recipient</th>
                            <th>Channel</th>
                            <th>Subject / Body</th>
                            <th>Status</th>
                            <th>Scheduled</th>
                            <th>Sent</th>
                            <th>Delivered</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/analytics-reports.js" asp-append-version="true"></script>
}
