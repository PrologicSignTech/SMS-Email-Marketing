@{
    ViewData["Title"] = "Manage Phone Numbers";
    Layout = "_LayoutAuthenticated";
    var indexRoles = User.FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value).ToList();
    var isSuperAdmin = indexRoles.Contains("SuperAdmin");
    var isAdminOrSuper = indexRoles.Contains("Admin") || isSuperAdmin;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-telephone"></i> Manage Phone Numbers</h2>
            <p class="text-muted mb-0">View and manage all phone numbers in your account</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Buy")" class="btn btn-success"><i class="bi bi-cart-plus me-1"></i>Buy Number</a>
            @if (isAdminOrSuper)
            {
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNumberModal"><i class="bi bi-plus-circle me-1"></i>Add Number</button>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table id="phoneNumbersTable" class="table table-hover w-100">
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Capabilities</th>
                        <th>Status</th>
                        <th>Assigned To</th>
                        <th>Rate</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Number Modal -->
<div class="modal fade" id="addNumberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Add Phone Number</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="mb-3"><label class="form-label">Phone Number <span class="text-danger">*</span></label><input type="text" class="form-control" id="addNumber" placeholder="+12025551234" required></div>
                <div class="mb-3"><label class="form-label">Friendly Name</label><input type="text" class="form-control" id="addFriendlyName" placeholder="e.g. Sales Line"></div>
                <div class="row mb-3">
                    <div class="col-md-6"><label class="form-label">Type</label><select class="form-select" id="addNumberType"><option value="0">Local</option><option value="1">Toll-Free</option><option value="2">Short Code</option><option value="3">Mobile</option></select></div>
                    <div class="col-md-6"><label class="form-label">Capabilities</label><select class="form-select" id="addCapabilities"><option value="0">SMS</option><option value="1">MMS</option><option value="2">Both (SMS+MMS)</option></select></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><label class="form-label">Monthly Rate</label><input type="number" class="form-control" id="addRate" value="1.00" step="0.01" min="0"></div>
                    <div class="col-md-4"><label class="form-label">Country</label><input type="text" class="form-control" id="addCountry" value="US"></div>
                    <div class="col-md-4"><label class="form-label">Region</label><input type="text" class="form-control" id="addRegion" placeholder="e.g. CA"></div>
                </div>
                <div class="mb-3"><label class="form-label">Notes</label><textarea class="form-control" id="addNotes" rows="2"></textarea></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addNumber()"><i class="bi bi-check-circle"></i> Add Number</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Number Modal -->
<div class="modal fade" id="editNumberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Phone Number</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <input type="hidden" id="editId">
                <div class="mb-3"><label class="form-label">Friendly Name</label><input type="text" class="form-control" id="editFriendlyName"></div>
                <div class="mb-3"><label class="form-label">Capabilities</label><select class="form-select" id="editCapabilities"><option value="0">SMS</option><option value="1">MMS</option><option value="2">Both (SMS+MMS)</option></select></div>
                <div class="mb-3"><label class="form-label">Notes</label><textarea class="form-control" id="editNotes" rows="2"></textarea></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveEdit()"><i class="bi bi-check-circle"></i> Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var isAdminOrSuper = @(isAdminOrSuper ? "true" : "false");
    </script>
    <script src="~/js/phonenumbers-index.js" asp-append-version="true"></script>
}
