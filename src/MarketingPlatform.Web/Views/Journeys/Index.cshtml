@{
    ViewData["Title"] = "Customer Journeys";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-signpost"></i> Customer Journeys</h2>
        <a href="@Url.Action("Create", "Journeys")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Journey
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="all-tab" data-bs-toggle="tab" href="#all" role="tab">
                        <i class="bi bi-list"></i> All Journeys
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="active-tab" data-bs-toggle="tab" href="#active" role="tab">
                        <i class="bi bi-play-circle"></i> Active
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="draft-tab" data-bs-toggle="tab" href="#draft" role="tab">
                        <i class="bi bi-file-earmark"></i> Draft
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="all">
                    <table id="journeysTable" class="table table-striped table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Steps</th>
                                <th>Subscribers</th>
                                <th>Last Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/journeys-index.js" asp-append-version="true"></script>
}
