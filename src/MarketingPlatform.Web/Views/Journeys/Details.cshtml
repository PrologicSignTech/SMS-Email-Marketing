@{
    ViewData["Title"] = "Journey Details";
    Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-signpost-fill"></i> <span id="journeyName">Journey Details</span></h2>
            <p class="text-muted mb-0" id="journeyDescription"></p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Edit", "Journeys", new { id = ViewBag.JourneyId ?? 0 })" class="btn btn-primary" id="editBtn">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <button class="btn btn-outline-success" id="activateBtn" style="display:none;" onclick="activateJourney()">
                <i class="bi bi-play-circle"></i> Activate
            </button>
            <button class="btn btn-outline-warning" id="pauseBtn" style="display:none;" onclick="pauseJourney()">
                <i class="bi bi-pause-circle"></i> Pause
            </button>
            <button class="btn btn-outline-info" onclick="duplicateJourney()">
                <i class="bi bi-copy"></i> Duplicate
            </button>
            <a href="@Url.Action("Index", "Journeys")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-primary" id="statTotal">0</div>
                    <small class="text-muted">Total Executions</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-success" id="statCompleted">0</div>
                    <small class="text-muted">Completed</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-info" id="statActive">0</div>
                    <small class="text-muted">Active</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 fw-bold text-danger" id="statFailed">0</div>
                    <small class="text-muted">Failed</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Journey Info + Workflow Steps -->
        <div class="col-lg-8">
            <!-- Journey Information -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Journey Information</h5>
                    <span class="badge" id="statusBadge">Draft</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="text-muted fw-semibold" style="width:140px;">Trigger Type</td>
                                    <td><span id="triggerType" class="badge bg-primary">—</span></td>
                                </tr>
                                <tr>
                                    <td class="text-muted fw-semibold">Trigger Criteria</td>
                                    <td><code id="triggerCriteria" class="small">—</code></td>
                                </tr>
                                <tr>
                                    <td class="text-muted fw-semibold">Created</td>
                                    <td id="createdAt">—</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="text-muted fw-semibold" style="width:140px;">Last Updated</td>
                                    <td id="updatedAt">—</td>
                                </tr>
                                <tr>
                                    <td class="text-muted fw-semibold">Completion Rate</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="progress flex-grow-1" style="height:8px;">
                                                <div class="progress-bar bg-success" id="completionBar" style="width:0%"></div>
                                            </div>
                                            <span class="small fw-semibold" id="completionRate">0%</span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted fw-semibold">Avg. Duration</td>
                                    <td id="avgDuration">—</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Workflow Steps / Nodes -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Workflow Steps</h5>
                </div>
                <div class="card-body p-0">
                    <div id="stepsContainer" class="p-3">
                        <div class="text-center text-muted py-4" id="noSteps">
                            <i class="bi bi-inbox" style="font-size:2rem;"></i>
                            <p class="mt-2 mb-0">No steps configured</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Executions Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-activity"></i> Recent Executions</h5>
                </div>
                <div class="card-body">
                    <table id="executionsTable" class="table table-striped table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>Contact</th>
                                <th>Status</th>
                                <th>Current Step</th>
                                <th>Started</th>
                                <th>Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column: Quick Stats + Performance -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart-line"></i> Performance</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small text-muted">Completion Rate</span>
                            <span class="small fw-semibold" id="perfCompletionRate">0%</span>
                        </div>
                        <div class="progress" style="height:6px;">
                            <div class="progress-bar bg-success" id="perfCompletionBar" style="width:0%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small text-muted">Failure Rate</span>
                            <span class="small fw-semibold" id="perfFailureRate">0%</span>
                        </div>
                        <div class="progress" style="height:6px;">
                            <div class="progress-bar bg-danger" id="perfFailureBar" style="width:0%"></div>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between small">
                        <span class="text-muted">Paused Executions</span>
                        <span class="fw-semibold" id="statPaused">0</span>
                    </div>
                    <div class="d-flex justify-content-between small mt-2">
                        <span class="text-muted">Avg. Execution Time</span>
                        <span class="fw-semibold" id="avgExecTime">—</span>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    <a id="editLink" href="#" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-1"></i> Edit Journey
                    </a>
                    <button class="btn btn-outline-info" onclick="duplicateJourney()">
                        <i class="bi bi-copy me-1"></i> Duplicate
                    </button>
                    <button class="btn btn-outline-danger" onclick="deleteJourney()">
                        <i class="bi bi-trash me-1"></i> Delete Journey
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const journeyId = window.location.pathname.split('/').pop();
        let executionsTable;

        document.addEventListener('DOMContentLoaded', function () {
            loadJourneyDetails();
            loadJourneyStats();
            initExecutionsTable();

            // Set edit link
            document.getElementById('editLink').href = `/Journeys/Edit/${journeyId}`;
            document.getElementById('editBtn').href = `/Journeys/Edit/${journeyId}`;
        });

        // ── Action type maps ──
        const triggerTypeNames = { 0: 'Event', 1: 'Schedule', 2: 'Keyword', 3: 'Manual' };
        const actionTypeNames = { 0: 'Send SMS', 1: 'Send MMS', 2: 'Send Email', 3: 'Wait', 4: 'Add to Group', 5: 'Remove from Group', 6: 'Add Tag' };
        const actionTypeIcons = { 0: 'bi-phone', 1: 'bi-image', 2: 'bi-envelope', 3: 'bi-clock', 4: 'bi-people', 5: 'bi-person-dash', 6: 'bi-tag' };
        const actionTypeColors = { 0: 'primary', 1: 'info', 2: 'warning', 3: 'secondary', 4: 'success', 5: 'danger', 6: 'dark' };
        const execStatusNames = { 0: 'Running', 1: 'Completed', 2: 'Failed', 3: 'Paused' };
        const execStatusColors = { 0: 'primary', 1: 'success', 2: 'danger', 3: 'warning' };

        async function loadJourneyDetails() {
            try {
                const response = await fetch(`/Journeys/GetJourney?id=${journeyId}`);
                const result = await response.json();

                if (result.success && result.data) {
                    const j = result.data;

                    document.getElementById('journeyName').textContent = j.name || 'Untitled Journey';
                    document.getElementById('journeyDescription').textContent = j.description || '';

                    // Status badge
                    const badge = document.getElementById('statusBadge');
                    if (j.isActive) {
                        badge.textContent = 'Active';
                        badge.className = 'badge bg-success';
                        document.getElementById('pauseBtn').style.display = '';
                    } else {
                        badge.textContent = 'Inactive';
                        badge.className = 'badge bg-secondary';
                        document.getElementById('activateBtn').style.display = '';
                    }

                    // Trigger type
                    const tt = typeof j.triggerType === 'number' ? triggerTypeNames[j.triggerType] : (j.triggerType || '—');
                    document.getElementById('triggerType').textContent = tt;

                    // Trigger criteria
                    document.getElementById('triggerCriteria').textContent = j.triggerCriteria || 'None';

                    // Dates
                    document.getElementById('createdAt').textContent = j.createdAt ? new Date(j.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) : '—';
                    document.getElementById('updatedAt').textContent = j.updatedAt ? new Date(j.updatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) : '—';

                    // Render nodes / steps
                    renderSteps(j.nodes || []);
                }
            } catch (error) {
                console.error('Error loading journey:', error);
            }
        }

        function renderSteps(nodes) {
            const container = document.getElementById('stepsContainer');

            if (!nodes || nodes.length === 0) {
                return; // Show "No steps" placeholder
            }

            document.getElementById('noSteps').style.display = 'none';

            const sorted = nodes.sort((a, b) => a.stepOrder - b.stepOrder);
            let html = '<div class="workflow-steps">';

            sorted.forEach((node, idx) => {
                const actionName = actionTypeNames[node.actionType] || `Action ${node.actionType}`;
                const icon = actionTypeIcons[node.actionType] || 'bi-circle';
                const color = actionTypeColors[node.actionType] || 'secondary';
                const label = node.nodeLabel || actionName;
                const delay = node.delayMinutes ? `<span class="badge bg-light text-dark ms-2"><i class="bi bi-clock"></i> ${formatDelay(node.delayMinutes)}</span>` : '';

                // Parse config for preview
                let configPreview = '';
                if (node.actionConfiguration) {
                    try {
                        const cfg = JSON.parse(node.actionConfiguration);
                        if (cfg.messageBody) configPreview = `<div class="small text-muted mt-1 text-truncate" style="max-width:500px;">${escapeHtml(cfg.messageBody)}</div>`;
                        else if (cfg.subject) configPreview = `<div class="small text-muted mt-1">Subject: ${escapeHtml(cfg.subject)}</div>`;
                        else if (cfg.groupId) configPreview = `<div class="small text-muted mt-1">Group ID: ${cfg.groupId}</div>`;
                        else if (cfg.tagId) configPreview = `<div class="small text-muted mt-1">Tag ID: ${cfg.tagId}</div>`;
                    } catch (e) { }
                }

                html += `
                    <div class="d-flex align-items-start mb-2">
                        <div class="flex-shrink-0 me-3 text-center" style="width:40px;">
                            <div class="rounded-circle bg-${color} text-white d-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                                <i class="bi ${icon}"></i>
                            </div>
                            ${idx < sorted.length - 1 ? '<div style="width:2px;height:20px;background:#dee2e6;margin:4px auto 0;"></div>' : ''}
                        </div>
                        <div class="flex-grow-1 card border-0 shadow-sm">
                            <div class="card-body py-2 px-3">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-light text-dark me-2">${node.stepOrder}</span>
                                    <strong>${escapeHtml(label)}</strong>
                                    <span class="badge bg-${color} bg-opacity-10 text-${color} ms-2">${actionName}</span>
                                    ${delay}
                                </div>
                                ${configPreview}
                            </div>
                        </div>
                    </div>
                `;
            });

            html += '</div>';
            container.innerHTML = html;
        }

        function formatDelay(minutes) {
            if (!minutes) return '';
            if (minutes < 60) return `${minutes}m`;
            if (minutes < 1440) return `${Math.round(minutes / 60)}h`;
            return `${Math.round(minutes / 1440)}d`;
        }

        async function loadJourneyStats() {
            try {
                const response = await fetch(`/Journeys/GetJourneyStats?id=${journeyId}`);
                const result = await response.json();

                if (result.success && result.data) {
                    const s = result.data;
                    document.getElementById('statTotal').textContent = s.totalExecutions || 0;
                    document.getElementById('statCompleted').textContent = s.completedExecutions || 0;
                    document.getElementById('statActive').textContent = s.activeExecutions || 0;
                    document.getElementById('statFailed').textContent = s.failedExecutions || 0;
                    document.getElementById('statPaused').textContent = s.pausedExecutions || 0;

                    const cRate = (s.completionRate || 0).toFixed(1);
                    const fRate = (s.failureRate || 0).toFixed(1);

                    document.getElementById('completionRate').textContent = cRate + '%';
                    document.getElementById('completionBar').style.width = cRate + '%';
                    document.getElementById('perfCompletionRate').textContent = cRate + '%';
                    document.getElementById('perfCompletionBar').style.width = cRate + '%';
                    document.getElementById('perfFailureRate').textContent = fRate + '%';
                    document.getElementById('perfFailureBar').style.width = fRate + '%';

                    const avgMin = s.averageExecutionTimeMinutes || 0;
                    const avgText = avgMin > 0 ? formatDelay(Math.round(avgMin)) : '—';
                    document.getElementById('avgDuration').textContent = avgText;
                    document.getElementById('avgExecTime').textContent = avgText;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        function initExecutionsTable() {
            executionsTable = $('#executionsTable').DataTable({
                serverSide: true,
                processing: true,
                ajax: {
                    url: `/Journeys/GetJourneyExecutions?id=${journeyId}`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        return JSON.stringify({
                            draw: d.draw,
                            start: d.start,
                            length: d.length
                        });
                    },
                    dataSrc: function (json) {
                        return json.data || [];
                    },
                    error: function () {
                        console.error('Failed to load executions');
                    }
                },
                columns: [
                    {
                        data: 'contactName',
                        render: function (data, type, row) {
                            const name = data || 'Unknown';
                            const email = row.contactEmail ? `<div class="small text-muted">${escapeHtml(row.contactEmail)}</div>` : '';
                            return `<strong>${escapeHtml(name)}</strong>${email}`;
                        }
                    },
                    {
                        data: 'status',
                        render: function (data) {
                            const name = execStatusNames[data] || 'Unknown';
                            const color = execStatusColors[data] || 'secondary';
                            return `<span class="badge bg-${color}">${name}</span>`;
                        }
                    },
                    {
                        data: 'currentStepName',
                        render: function (data, type, row) {
                            return data || `Step ${row.currentStepOrder || 0}`;
                        }
                    },
                    {
                        data: 'startedAt',
                        render: function (data) {
                            return data ? new Date(data).toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) : '—';
                        }
                    },
                    {
                        data: 'completedAt',
                        render: function (data) {
                            return data ? new Date(data).toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) : '—';
                        }
                    },
                    {
                        data: 'id',
                        orderable: false,
                        searchable: false,
                        className: 'text-end',
                        render: function (data, type, row) {
                            let html = '';
                            if (row.status === 0) { // Running
                                html += `<button class="btn btn-sm btn-outline-warning me-1" onclick="pauseExecution(${data})" title="Pause"><i class="bi bi-pause"></i></button>`;
                                html += `<button class="btn btn-sm btn-outline-danger" onclick="cancelExecution(${data})" title="Cancel"><i class="bi bi-x-circle"></i></button>`;
                            } else if (row.status === 3) { // Paused
                                html += `<button class="btn btn-sm btn-outline-success me-1" onclick="resumeExecution(${data})" title="Resume"><i class="bi bi-play"></i></button>`;
                                html += `<button class="btn btn-sm btn-outline-danger" onclick="cancelExecution(${data})" title="Cancel"><i class="bi bi-x-circle"></i></button>`;
                            } else {
                                html += `<span class="text-muted small">—</span>`;
                            }
                            return html;
                        }
                    }
                ],
                order: [[3, 'desc']],
                pageLength: 10,
                language: {
                    processing: '<div class="spinner-border spinner-border-sm text-primary" role="status"><span class="visually-hidden">Loading...</span></div>',
                    emptyTable: '<div class="text-center text-muted py-3"><i class="bi bi-inbox"></i> No executions yet</div>',
                    zeroRecords: '<div class="text-center text-muted py-3"><i class="bi bi-search"></i> No matching executions</div>'
                }
            });
        }

        // ── Actions ──

        function activateJourney() {
            if (!confirm('Activate this journey?')) return;
            $.ajax({
                url: `/Journeys/Activate?id=${journeyId}`,
                method: 'POST',
                success: function (r) {
                    if (r.success) {
                        showNotification('Journey activated!', 'success');
                        setTimeout(() => location.reload(), 800);
                    } else {
                        showNotification(r.message || 'Failed', 'error');
                    }
                }
            });
        }

        function pauseJourney() {
            if (!confirm('Pause this journey?')) return;
            $.ajax({
                url: `/Journeys/Pause?id=${journeyId}`,
                method: 'POST',
                success: function (r) {
                    if (r.success) {
                        showNotification('Journey paused!', 'success');
                        setTimeout(() => location.reload(), 800);
                    } else {
                        showNotification(r.message || 'Failed', 'error');
                    }
                }
            });
        }

        function duplicateJourney() {
            if (!confirm('Duplicate this journey?')) return;
            $.ajax({
                url: `/Journeys/Duplicate?id=${journeyId}`,
                method: 'POST',
                success: function (r) {
                    if (r.success) {
                        showNotification('Journey duplicated!', 'success');
                        setTimeout(() => window.location.href = '/Journeys/Index', 800);
                    } else {
                        showNotification(r.message || 'Failed', 'error');
                    }
                }
            });
        }

        function deleteJourney() {
            if (!confirm('Delete this journey? This cannot be undone.')) return;
            $.ajax({
                url: `/Journeys/Delete?id=${journeyId}`,
                method: 'POST',
                success: function (r) {
                    if (r.success) {
                        showNotification('Journey deleted!', 'success');
                        setTimeout(() => window.location.href = '/Journeys/Index', 800);
                    } else {
                        showNotification(r.message || 'Failed', 'error');
                    }
                }
            });
        }

        function pauseExecution(executionId) {
            $.post(`/Journeys/PauseExecution?executionId=${executionId}`, function (r) {
                if (r.success) { showNotification('Execution paused', 'success'); executionsTable.ajax.reload(null, false); loadJourneyStats(); }
                else showNotification(r.message || 'Failed', 'error');
            });
        }

        function resumeExecution(executionId) {
            $.post(`/Journeys/ResumeExecution?executionId=${executionId}`, function (r) {
                if (r.success) { showNotification('Execution resumed', 'success'); executionsTable.ajax.reload(null, false); loadJourneyStats(); }
                else showNotification(r.message || 'Failed', 'error');
            });
        }

        function cancelExecution(executionId) {
            if (!confirm('Cancel this execution?')) return;
            $.post(`/Journeys/CancelExecution?executionId=${executionId}`, function (r) {
                if (r.success) { showNotification('Execution cancelled', 'success'); executionsTable.ajax.reload(null, false); loadJourneyStats(); }
                else showNotification(r.message || 'Failed', 'error');
            });
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
}
