@{
    Layout = "_LayoutAuthenticated";
    ViewData["Title"] = "Suppression Lists";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-shield-x text-primary me-2"></i>Suppression Lists</h2>
            <p class="text-muted mb-0">Manage opt-outs, bounces, and blocked contacts</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "SuppressionRules")" class="btn btn-outline-secondary">
                <i class="bi bi-gear-wide-connected me-1"></i>Auto Rules
            </a>
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#csvUploadModal">
                <i class="bi bi-upload me-1"></i>CSV Upload
            </button>
            <a href="@Url.Action("Create", "Suppression")" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-1"></i>Add Entry
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value" id="statTotal">0</div>
                        <div class="stat-label">Total Entries</div>
                    </div>
                    <div class="text-primary fs-2"><i class="bi bi-list-ul"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-danger">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value" id="statOptOut">0</div>
                        <div class="stat-label">Opt-Outs</div>
                    </div>
                    <div class="text-danger fs-2"><i class="bi bi-person-x-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value" id="statBounce">0</div>
                        <div class="stat-label">Bounces</div>
                    </div>
                    <div class="text-warning fs-2"><i class="bi bi-exclamation-triangle-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-info">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value" id="statComplaint">0</div>
                        <div class="stat-label">Complaints</div>
                    </div>
                    <div class="text-info fs-2"><i class="bi bi-flag-fill"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label small text-muted">Filter by Type</label>
                    <select class="form-select" id="typeFilter">
                        <option value="">All Types</option>
                        <option value="0">Opt-Out</option>
                        <option value="1">Bounce</option>
                        <option value="2">Complaint</option>
                        <option value="3">Manual</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table id="suppressionTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Phone / Email</th>
                            <th>Type</th>
                            <th>Reason</th>
                            <th>Created</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- CSV Upload Modal -->
<div class="modal fade" id="csvUploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-upload me-2"></i>Upload CSV Suppression List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle me-1"></i>
                    Upload a CSV file with phone numbers or email addresses to suppress. One entry per line.
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Suppression Type <span class="text-danger">*</span></label>
                        <select class="form-select" id="csvType" required>
                            <option value="">Select Type</option>
                            <option value="0">Opt-Out</option>
                            <option value="1">Bounce</option>
                            <option value="2">Complaint</option>
                            <option value="3">Manual</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Reason</label>
                        <input type="text" class="form-control" id="csvReason" placeholder="e.g. Imported from legacy system">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">CSV Content</label>
                    <textarea class="form-control" id="csvContent" rows="8"
                              placeholder="Paste emails or phone numbers, one per line:&#10;user1@example.com&#10;user2@example.com&#10;+12025551234&#10;+12025555678"></textarea>
                    <div class="form-text">
                        <span id="csvLineCount">0</span> entries detected.
                        You can also paste comma-separated values.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Or Upload CSV File</label>
                    <input type="file" class="form-control" id="csvFile" accept=".csv,.txt">
                    <div class="form-text">Supported formats: .csv, .txt (one entry per line)</div>
                </div>

                <div id="csvPreview" style="display:none" class="mb-3">
                    <label class="form-label">Preview</label>
                    <div class="border rounded p-2 bg-light" style="max-height:150px;overflow-y:auto">
                        <ul class="list-unstyled mb-0" id="csvPreviewList"></ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="csvUploadBtn" onclick="uploadCsv()">
                    <i class="bi bi-upload me-1"></i> Upload & Suppress
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        // CSV file reader
        document.getElementById('csvFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = function(ev) {
                document.getElementById('csvContent').value = ev.target.result;
                updateCsvCount();
            };
            reader.readAsText(file);
        });

        document.getElementById('csvContent').addEventListener('input', updateCsvCount);

        function updateCsvCount() {
            const lines = parseCsvEntries();
            document.getElementById('csvLineCount').textContent = lines.length;

            const preview = document.getElementById('csvPreview');
            const list = document.getElementById('csvPreviewList');
            if (lines.length > 0 && lines.length <= 20) {
                list.innerHTML = lines.map(l => '<li><code>' + l + '</code></li>').join('');
                preview.style.display = '';
            } else if (lines.length > 20) {
                list.innerHTML = lines.slice(0, 10).map(l => '<li><code>' + l + '</code></li>').join('') +
                    '<li class="text-muted">... and ' + (lines.length - 10) + ' more</li>';
                preview.style.display = '';
            } else {
                preview.style.display = 'none';
            }
        }

        function parseCsvEntries() {
            const raw = document.getElementById('csvContent').value.trim();
            if (!raw) return [];
            // Split by newlines or commas, trim, filter empty
            return raw.split(/[\n,]+/).map(s => s.trim()).filter(s => s.length > 0);
        }

        function uploadCsv() {
            const type = document.getElementById('csvType').value;
            const reason = document.getElementById('csvReason').value.trim();
            const entries = parseCsvEntries();

            if (type === '') {
                showNotification('Please select a suppression type', 'error');
                return;
            }
            if (entries.length === 0) {
                showNotification('Please enter at least one entry', 'error');
                return;
            }

            const btn = document.getElementById('csvUploadBtn');
            btn.disabled = true;
            btn.innerHTML = '<i class="spinner-border spinner-border-sm me-1"></i>Uploading ' + entries.length + ' entries...';

            fetch('/Suppression/BulkCreateEntries', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    phoneOrEmails: entries,
                    type: parseInt(type),
                    reason: reason || 'CSV Import'
                })
            })
            .then(r => r.json())
            .then(result => {
                if (result.success) {
                    showNotification(result.message || entries.length + ' entries suppressed successfully!', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('csvUploadModal')).hide();
                    document.getElementById('csvContent').value = '';
                    document.getElementById('csvFile').value = '';
                    updateCsvCount();
                    if (typeof suppressionTable !== 'undefined') suppressionTable.ajax.reload(null, false);
                } else {
                    showNotification(result.message || 'Failed to upload entries', 'error');
                }
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upload me-1"></i> Upload & Suppress';
            })
            .catch(() => {
                showNotification('An error occurred', 'error');
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upload me-1"></i> Upload & Suppress';
            });
        }
    </script>
    <script src="~/js/suppression-index.js" asp-append-version="true"></script>
}
