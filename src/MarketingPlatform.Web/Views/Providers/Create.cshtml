@{
    ViewData["Title"] = "Add Provider"; Layout = "_LayoutAuthenticated";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-hdd-network"></i> Add Provider</h2>
        <a href="@Url.Action("Index", "Providers")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Providers
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="providerForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Provider Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select class="form-select" id="type" required>
                            <option value="">Select Type</option>
                            <option value="0">SMS</option>
                            <option value="1">MMS</option>
                            <option value="2">Email</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="apiKey" class="form-label">API Key <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="apiKey" required>
                </div>

                <div class="mb-3">
                    <label for="apiSecret" class="form-label">API Secret</label>
                    <input type="password" class="form-control" id="apiSecret">
                </div>

                <div class="mb-3">
                    <label for="configuration" class="form-label">Configuration (JSON)</label>
                    <textarea class="form-control" id="configuration" rows="3" placeholder='{"endpoint": "https://api.provider.com"}'></textarea>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isPrimary">
                        <label class="form-check-label" for="isPrimary">Set as default provider for this type</label>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isActive" checked>
                        <label class="form-check-label" for="isActive"><strong>Active Provider</strong></label>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index", "Providers")" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary" id="submitBtn"><i class="bi bi-check-circle"></i> Add Provider</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('providerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';

            var data = {
                name: document.getElementById('name').value.trim(),
                type: parseInt(document.getElementById('type').value),
                apiKey: document.getElementById('apiKey').value,
                apiSecret: document.getElementById('apiSecret').value || null,
                configuration: document.getElementById('configuration').value.trim() || null,
                isPrimary: document.getElementById('isPrimary').checked,
                isActive: document.getElementById('isActive').checked
            };

            $.ajax({
                url: '/Providers/CreateProvider',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    if (response.success) {
                        showNotification('Provider created successfully!', 'success');
                        setTimeout(function() { window.location.href = '/Providers/Index'; }, 1000);
                    } else {
                        showNotification(response.message || 'Failed to create provider', 'error');
                        btn.disabled = false;
                        btn.innerHTML = '<i class="bi bi-check-circle"></i> Add Provider';
                    }
                },
                error: function() {
                    showNotification('An error occurred', 'error');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-circle"></i> Add Provider';
                }
            });
        });
    </script>
}
