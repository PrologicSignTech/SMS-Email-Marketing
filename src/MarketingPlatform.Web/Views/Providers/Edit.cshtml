@{
    ViewData["Title"] = "Edit Provider"; Layout = "_LayoutAuthenticated";
    var providerId = ViewBag.ProviderId ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil"></i> Edit Provider</h2>
        <a href="@Url.Action("Index", "Providers")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Providers
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div id="loading" class="text-center py-5"><div class="spinner-border"></div></div>
            <form id="providerForm" style="display: none;">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="typeName" class="form-label">Type</label>
                        <input type="text" class="form-control" id="typeName" disabled>
                        <input type="hidden" id="type">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="apiKey" class="form-label">API Key</label>
                    <input type="password" class="form-control" id="apiKey" placeholder="Leave blank to keep existing">
                </div>
                <div class="mb-3">
                    <label for="apiSecret" class="form-label">API Secret</label>
                    <input type="password" class="form-control" id="apiSecret" placeholder="Leave blank to keep existing">
                </div>
                <div class="mb-3">
                    <label for="configuration" class="form-label">Configuration (JSON)</label>
                    <textarea class="form-control" id="configuration" rows="3"></textarea>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive">
                            <label class="form-check-label" for="isActive"><strong>Active</strong></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isPrimary">
                            <label class="form-check-label" for="isPrimary">Primary provider for this type</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-danger" onclick="deleteProvider()"><i class="bi bi-trash"></i> Delete</button>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Index", "Providers")" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary" id="submitBtn"><i class="bi bi-check-circle"></i> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var providerId = @providerId;
        var typeNames = ['SMS', 'MMS', 'Email'];

        $(document).ready(function() {
            $.get('/Providers/GetProvider?id=' + providerId, function(response) {
                if (response.success && response.data) {
                    var p = response.data;
                    document.getElementById('name').value = p.name || '';
                    document.getElementById('type').value = p.type ?? 0;
                    document.getElementById('typeName').value = p.typeName || typeNames[p.type] || '';
                    document.getElementById('isActive').checked = p.isActive === true;
                    document.getElementById('isPrimary').checked = p.isPrimary === true;
                    document.getElementById('configuration').value = p.configuration || '';
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('providerForm').style.display = 'block';
                } else {
                    showNotification('Provider not found', 'error');
                    setTimeout(function() { window.location.href = '/Providers/Index'; }, 1000);
                }
            });
        });

        document.getElementById('providerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';

            var data = {
                name: document.getElementById('name').value.trim(),
                type: parseInt(document.getElementById('type').value),
                apiKey: document.getElementById('apiKey').value || null,
                apiSecret: document.getElementById('apiSecret').value || null,
                configuration: document.getElementById('configuration').value.trim() || null,
                isPrimary: document.getElementById('isPrimary').checked,
                isActive: document.getElementById('isActive').checked
            };

            $.ajax({
                url: '/Providers/UpdateProvider?id=' + providerId,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    if (response.success) {
                        showNotification('Provider updated successfully!', 'success');
                        setTimeout(function() { window.location.href = '/Providers/Index'; }, 1000);
                    } else {
                        showNotification(response.message || 'Failed to update', 'error');
                        btn.disabled = false;
                        btn.innerHTML = '<i class="bi bi-check-circle"></i> Save';
                    }
                },
                error: function() {
                    showNotification('An error occurred', 'error');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-circle"></i> Save';
                }
            });
        });

        function deleteProvider() {
            confirmAction('Are you sure you want to delete this provider?', function() {
                $.post('/Providers/Delete?id=' + providerId, function(response) {
                    if (response.success) {
                        showNotification('Provider deleted!', 'success');
                        setTimeout(function() { window.location.href = '/Providers/Index'; }, 1000);
                    } else {
                        showNotification(response.message || 'Failed to delete', 'error');
                    }
                });
            });
        }
    </script>
}
